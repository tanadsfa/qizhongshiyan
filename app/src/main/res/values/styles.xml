<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="NoteTextStyle">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#333333</item>
    </style>

    <style name="TimestampTextStyle">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">#777777</item>
    </style>

    <style name="CustomSearchViewStyle" parent="Widget.AppCompat.SearchView">
        <item name="android:background">#FFFFFF</item> <!-- 设置背景颜色 -->
        <item name="android:textColor">#000000</item> <!-- 设置文本颜色 -->
        <!-- 可以根据需要添加更多属性 -->
    </style>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- 背景颜色 -->
        <item name="android:windowBackground">@color/windowBackground</item>
        <!-- 默认文字颜色 -->
        <item name="android:textColor">@color/textColor</item>
        <!-- 列表背景 -->
        <item name="android:colorBackgroundFloating">@color/backgroundFloating</item>
    </style>
</resources>

